# change window focus within space
ralt - j : yabai -m window --focus south
ralt - k : yabai -m window --focus north
ralt - h : yabai -m window --focus west
ralt - l : yabai -m window --focus east

# rotate layout clockwise
cmd + ralt - r : yabai -m space --rotate 270
cmd + ralt - y : yabai -m space --mirror y-axis
cmd + ralt - x : yabai -m space --mirror x-axis
cmd + ralt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
cmd + ralt - m : yabai -m window --toggle zoom-fullscreen
cmd + ralt - e : yabai -m space --balance

# change layout of desktop
cmd + ralt - z : yabai -m space --layout bsp
cmd + ralt - x : yabai -m space --layout float

# swap windows
cmd + ralt - j : yabai -m window --swap south
cmd + ralt - k : yabai -m window --swap north
cmd + ralt - h : yabai -m window --swap west
cmd + ralt - l : yabai -m window --swap east

# move window and split
ctrl + ralt - j : yabai -m window --warp south
ctrl + ralt - k : yabai -m window --warp north
ctrl + ralt - h : yabai -m window --warp west
ctrl + ralt - l : yabai -m window --warp east

# stop/start/restart yabai
ctrl + ralt - q : yabai --stop-service
ctrl + ralt - s : yabai --start-service
ctrl + ralt - r : yabai --restart-service
